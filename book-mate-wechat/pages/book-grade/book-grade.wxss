/* pages/book-grade/book-grade.wxss */

.title {
  font-size: 24px;
  color: #000;
  text-align: center;
  margin-top: 50px;
}

image {
  height: 40px;
  width: 40px;
  margin-left: 20px;
}

.star-container {
  width: 80%;
  height: 100px;
  margin-left: auto;
  margin-right: auto;
  margin-top: 150px;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.star-container image:first-child {
  margin-left: 0;
}

.submitBtn {
    width: 90%;
    margin: 0 auto;
    height: 80rpx;
    background-color: #fff;
    border-radius: 5px;
    color: #4db6ac;
    text-align: center;
    line-height: 80rpx;
    font-size: 32rpx;
    margin-top: 200rpx;
    border: 1px solid #4db6ac;
}

button::after {
  border: 0;
}